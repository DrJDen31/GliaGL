{
  "scenario": "3class",
  "train": true,
  "epochs": 10,
  "batch": 3,
  "shuffle": true,
  "warmup": 20,
  "window": 80,
  "noise": 0.10,
  "detector": { "alpha": 0.05, "threshold": 0.01, "default_id": "" },

  "lr": 0.01,
  "lambda": 0.95,
  "weight_decay": 0.0001,
  "margin": 0.05,
  "reward_mode": "binary",
  "reward_pos": 1.2,
  "reward_neg": -0.8,

  "verbose": true,
  "log_every": 1,
  "seed": 123456,

  "checkpoints_enable": true,
  "ckpt_l0": 4,
  "ckpt_l1": 2,
  "ckpt_l2": 1,

  "revert_enable": false,
  "revert_metric": "accuracy",
  "revert_window": 1,
  "revert_drop": 0.2
}

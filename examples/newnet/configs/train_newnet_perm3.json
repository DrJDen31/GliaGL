{
  "net_path": "examples/newnet/newnet_perm3_random.net",
  "scenario": "perm3",

  "train": true,
  "epochs": 80,
  "batch": 12,
  "shuffle": true,

  "warmup": 20,
  "window": 220,
  "noise": 0.08,
  "detector": { "alpha": 0.05, "threshold": 0.001, "default_id": "" },
  "n_per_class": 40,

  "lr": 0.02,
  "lambda": 0.95,
  "weight_decay": 0.0001,
  "margin": 0.0,
  "reward_mode": "binary",
  "reward_gain": 6.0,
  "reward_min": -1.0,
  "reward_max": 1.0,

  "use_advantage_baseline": false,
  "elig_post_use_rate": true,
  "update_gating": "winner_only",
  "weight_clip": 2.5,

  "eta_theta": 0.2,
  "r_target": 0.01,

  "jitter_std": 0.2,
  "timing_jitter": 3,

  "verbose": true,
  "log_every": 1,
  "seed": 24680,

  "checkpoints_enable": true,
  "ckpt_l0": 6,
  "ckpt_l1": 3,
  "ckpt_l2": 2
}

